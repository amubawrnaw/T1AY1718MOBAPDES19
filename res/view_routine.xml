<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COACH"
        android:layout_centerHorizontal="true"
        android:padding="15dp"
        android:textSize="30sp"
        android:id="@+id/tv_coach"
        android:textColor="#000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_coach"
        android:orientation="horizontal"
        android:background="#000000"
        android:id="@+id/buttons">

        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="FOCUS"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:background="#000000"
            android:textSize="20sp"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#000"
            android:text="ROUTINE"
            android:textColor="#8e8e8e"
            android:textSize="20sp"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="MY PLAN"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:background="#000000"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttons"
        android:layout_margin="20dp"
        android:orientation="vertical">
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ROUTINE 1"
            android:textSize="20sp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exercise 1                                        10 Reps"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exercise 2                                        20 Reps"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exercise 3                                        10 Reps"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textSize="15sp"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:gravity="center">

        <Button
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:text="EDIT"
            android:textColor="#FFFFFF"
            android:background="#000000"
            android:textSize="25sp"
            android:id="@+id/button_edit"
            android:layout_margin="5dp"/>

        <Button
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:text="ADD TO MY PLAN"
            android:textColor="#FFFFFF"
            android:background="#000000"
            android:textSize="25sp"
            android:id="@+id/button_addtomyplan"
            android:layout_margin="5dp"/>

        <Button
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:text="BACK"
            android:textColor="#FFFFFF"
            android:background="#000000"
            android:textSize="25sp"
            android:id="@+id/button_back"
            android:layout_margin="5dp"/>
    </LinearLayout>
</RelativeLayout>